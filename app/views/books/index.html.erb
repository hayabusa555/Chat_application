<p id="notice"><%= notice %></p>

<h1>Ideas</h1>

<%# form_for の代わりに search_form_for を使うことで検索フォームを作成 %>
<%= search_form_for @q do |f| %>

  <%# start 特定の文字列で始まる商品名で検索 %>
  <%= f.label :title_start, "Title" %>
  <%= f.search_field :title_start %>
  <br />

  <%# cont 文字列が含まれる商品説明で検索（not_cont で含まれない商品説明） %>
  <%= f.label :tag_cont, "tag" %>
  <%= f.search_field :tag_cont %>
  <br />

  <%# cont 文字列が含まれる商品説明で検索（not_cont で含まれない商品説明） %>
  <%= f.label :memo_cont, "Memo" %>
  <%= f.search_field :memo_cont %>
  <br />

  <%# 検索ボタン %>
  <%= f.submit %>
<% end %>

<hr />


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Tag</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.tag %></td>
        <td><%= book.memo %></td>
        <td><%= link_to 'Show', book %></td>
<!delete用>
        <!---<td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>--->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

